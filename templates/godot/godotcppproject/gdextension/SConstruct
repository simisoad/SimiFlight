
import os
import sys

env = SConscript("godot-cpp/SConstruct")

# Pfade f√ºr Includes und Quellcode
env.Append(CPPPATH="src/")

src = Glob("src/*.cpp")

if env["platform"] == "windows":
    libpath = "Test/libtest{}{}".format( env["suffix"], env["SHLIBSUFFIX"])
    sharedLib = env.SharedLibrary(libpath, src)
    Default(sharedLib)